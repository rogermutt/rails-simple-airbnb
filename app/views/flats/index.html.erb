<h1>Flats#index</h1>

<div class="container">
    <div class="row">

    <% @flats.each do |flat| %>

    <div class="flat-card">

        <div class="*******">
          <div class="flat-content" style="padding: 20px; margin: 20px;">
            <p class="flat-name"><%=flat.name%></p>
            <p class="flat-address"><%=flat.address%></p>
            <p class="flat-description"><%=flat.description%></p>
            <p class="flat-price"><%=flat.price_per_night%></p>
            <p class="flat-guests"><%=flat.number_of_guests%></p>
          </div>
        </div>

      <%= link_to 'Edit', edit_flat_path(flat), class:"btn btn-primary" %>
      <%= link_to 'More info', flat_path(flat), class:"btn btn-primary" %>
      <%= link_to "Delete", flat_path(flat), class:"btn btn-primary",
            method: :delete,
            data: { confirm: "Are you sure?" } %>

    </div>

    <% end %>

    </div>
</div>
